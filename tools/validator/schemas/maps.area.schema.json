{
  "$id": "https://agentrpg.dev/schemas/maps.area.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Area Map Metadata",
  "type": "object",
  "required": [
    "schema_version",
    "area_id",
    "image",
    "hotspots",
    "ascii_preview",
    "legend"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^maps\\.area\\.v[0-9]+$"
    },
    "area_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]{3,60}$"
    },
    "image": {
      "$ref": "#/definitions/image"
    },
    "hotspots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hotspot"
      }
    },
    "ascii_preview": {
      "$ref": "#/definitions/asciiPreview"
    },
    "legend": {
      "$ref": "#/definitions/legend"
    },
    "notes": {
      "type": "string",
      "maxLength": 2000
    }
  },
  "definitions": {
    "image": {
      "type": "object",
      "required": ["file", "width_px", "height_px"],
      "additionalProperties": false,
      "properties": {
        "file": {
          "type": "string",
          "pattern": ".+\\.(png|jpg|jpeg|svg)$",
          "maxLength": 300
        },
        "width_px": {
          "type": "integer",
          "minimum": 1,
          "maximum": 16384
        },
        "height_px": {
          "type": "integer",
          "minimum": 1,
          "maximum": 16384
        }
      }
    },
    "asciiPreview": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 64
      }
    },
    "legend": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 32,
      "patternProperties": {
        ".+": {
          "type": "string",
          "minLength": 1,
          "maxLength": 80
        }
      },
      "additionalProperties": false
    },
    "coordinate": {
      "type": "object",
      "required": ["x", "y"],
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "bounds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bounding_box": {
          "type": "object",
          "required": ["x", "y", "width", "height"],
          "properties": {
            "x": { "type": "integer", "minimum": 0 },
            "y": { "type": "integer", "minimum": 0 },
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        },
        "polygon": {
          "type": "array",
          "minItems": 3,
          "items": { "$ref": "#/definitions/coordinate" }
        }
      },
      "oneOf": [
        { "required": ["bounding_box"] },
        { "required": ["polygon"] }
      ]
    },
    "hotspot": {
      "type": "object",
      "required": ["id", "label", "bounds"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]{3,60}$"
        },
        "label": {
          "type": "string",
          "minLength": 3,
          "maxLength": 120
        },
        "bounds": {
          "$ref": "#/definitions/bounds"
        },
        "linked_quest_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]{3,60}$"
          },
          "uniqueItems": true
        },
        "notes": {
          "type": "string",
          "maxLength": 500
        }
      }
    }
  }
}
