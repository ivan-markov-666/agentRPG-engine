{
  "$id": "https://agentrpg.dev/schemas/maps.world.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "World Map Metadata",
  "type": "object",
  "required": ["schema_version", "image", "regions", "ascii_preview", "legend"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^maps\\.world\\.v[0-9]+$"
    },
    "image": {
      "$ref": "#/definitions/image"
    },
    "regions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/region"
      }
    },
    "ascii_preview": {
      "$ref": "#/definitions/asciiPreview"
    },
    "legend": {
      "$ref": "#/definitions/legend"
    },
    "notes": {
      "type": "string",
      "maxLength": 2000
    }
  },
  "definitions": {
    "image": {
      "type": "object",
      "required": ["file", "width_px", "height_px"],
      "additionalProperties": false,
      "properties": {
        "file": {
          "type": "string",
          "pattern": ".+\\.(png|jpg|jpeg|svg)$",
          "maxLength": 300
        },
        "width_px": {
          "type": "integer",
          "minimum": 1,
          "maximum": 16384
        },
        "height_px": {
          "type": "integer",
          "minimum": 1,
          "maximum": 16384
        }
      }
    },
    "asciiPreview": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 64
      }
    },
    "legend": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 32,
      "patternProperties": {
        ".+": {
          "type": "string",
          "minLength": 1,
          "maxLength": 80
        }
      },
      "additionalProperties": false
    },
    "boundingBox": {
      "type": "object",
      "required": ["x", "y", "width", "height"],
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        },
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "region": {
      "type": "object",
      "required": ["id", "label", "bounding_box"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]{3,60}$"
        },
        "label": {
          "type": "string",
          "minLength": 3,
          "maxLength": 120
        },
        "bounding_box": {
          "$ref": "#/definitions/boundingBox"
        },
        "area_id": {
          "type": "string",
          "pattern": "^[a-z0-9-]{3,60}$"
        },
        "map_file": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300
        },
        "notes": {
          "type": "string",
          "maxLength": 500
        }
      }
    }
  }
}
