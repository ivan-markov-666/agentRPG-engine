{
  "$id": "https://agent-rpg/schemas/state.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "current_area_id": { "type": "string" },
    "current_day": { "type": "integer", "minimum": 0 },
    "current_hour": { "type": "integer", "minimum": 0, "maximum": 23 },
    "active_quests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "quest_id": { "type": "string" },
          "status": { "type": "string" },
          "progress": { "type": "number" },
          "current_step_id": { "type": "string" },
          "flags": { "type": "object" }
        },
        "required": ["quest_id"],
        "additionalProperties": true
      }
    },
    "stats": { "$ref": "#/definitions/stats" },
    "world_state": { "$ref": "#/definitions/worldState" },
    "companion_relationships": { "$ref": "#/definitions/companionRelationships" },
    "flags": { "$ref": "#/definitions/flagMap" },
    "inventories": { "$ref": "#/definitions/inventoryList" },
    "exploration_enabled": { "type": "boolean" },
    "exploration_log_preview": {
      "type": "array",
      "items": { "type": "string" }
    },
    "content_sets": {
      "type": "object",
      "patternProperties": {
        "^belintash-crack$": { "$ref": "#/definitions/belintashContentSetState" },
        "^next-guardians$": { "$ref": "#/definitions/nextGuardiansContentSetState" },
        "^balkan-trail$": { "$ref": "#/definitions/balkanTrailContentSetState" },
        "^laut-stronghold$": { "$ref": "#/definitions/lautStrongholdContentSetState" }
      },
      "additionalProperties": { "$ref": "#/definitions/contentSetState" }
    }
  },
  "additionalProperties": true,
  "definitions": {
    "stats": {
      "type": "object",
      "properties": {
        "health": { "$ref": "#/definitions/range0100" },
        "energy": { "$ref": "#/definitions/range0100" },
        "mana": { "$ref": "#/definitions/range0100" },
        "stamina": { "$ref": "#/definitions/range0100" },
        "hunger": { "$ref": "#/definitions/range0100" },
        "thirst": { "$ref": "#/definitions/range0100" },
        "morale": { "$ref": "#/definitions/rangeNeg100100" },
        "carry_capacity_max": { "type": "number", "minimum": 0 },
        "carry_weight_current": { "type": "number", "minimum": 0 },
        "encumbrance_level": { "type": "string" },
        "reputation": { "$ref": "#/definitions/reputationMap" },
        "currency": { "$ref": "#/definitions/currencyMap" },
        "status_effects": { "$ref": "#/definitions/statusEffects" },
        "date_time": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": { "$ref": "#/definitions/genericStat" }
    },
    "range0100": { "type": "number", "minimum": 0, "maximum": 100 },
    "rangeNeg100100": { "type": "number", "minimum": -100, "maximum": 100 },
    "reputationMap": {
      "type": "object",
      "additionalProperties": { "type": "number", "minimum": -100, "maximum": 100 }
    },
    "currencyMap": {
      "type": "object",
      "properties": {
        "gold_hyperpyron": { "type": "number", "minimum": 0 },
        "silver_trachy": { "type": "number", "minimum": 0 },
        "copper_coins": { "type": "number", "minimum": 0 },
        "trade_goods": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": { "type": ["number", "object"] }
    },
    "statusEffects": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "stack": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": true
      }
    },
    "companionRelationships": {
      "type": "object",
      "additionalProperties": { "type": "number", "minimum": -100, "maximum": 100 }
    },
    "worldState": {
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "time_of_day": { "type": "string" },
        "weather": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "intensity": { "type": "string" },
            "temperature_c": { "type": "number" },
            "wind": { "type": "string" }
          },
          "additionalProperties": false
        },
        "visibility": { "type": "string" },
        "noise_level": { "type": "string" },
        "location": {
          "type": "object",
          "properties": {
            "area_id": { "type": "string" },
            "name": { "type": "string" },
            "map_marker": { "type": "string" },
            "coordinates": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "flagMap": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          { "type": "boolean" },
          { "type": "number", "minimum": 0 },
          { "type": "string" }
        ]
      }
    },
    "inventoryList": {
      "type": "array",
      "items": { "$ref": "#/definitions/inventory" }
    },
    "inventory": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "slots": {
          "type": "object",
          "properties": {
            "used": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/inventoryItem" }
        }
      },
      "required": ["id", "items"],
      "additionalProperties": false
    },
    "inventoryItem": {
      "type": "object",
      "properties": {
        "item_id": { "type": "string" },
        "title": { "type": "string" },
        "qty": { "type": "integer", "minimum": 0 },
        "meta": { "type": "object" }
      },
      "required": ["item_id", "qty"],
      "additionalProperties": true
    },
    "genericStat": {
      "anyOf": [
        { "type": "number", "minimum": 0 },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/genericStat" }
        }
      ]
    },
    "contentSetState": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "last_scene_id": { "type": "string" },
        "progress": {
          "anyOf": [
            { "type": "number" },
            { "type": "string" },
            { "type": "object" },
            { "type": "array" }
          ]
        },
        "state": { "type": "object" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "belintashContentSetState": {
      "allOf": [
        { "$ref": "#/definitions/contentSetState" },
        {
          "type": "object",
          "properties": {
            "state": {
              "type": "object",
              "properties": {
                "collapse_stage": { "type": "number", "minimum": 0, "maximum": 5 },
                "rescued_archivists": { "type": "number", "minimum": 0, "maximum": 20 },
                "hazard_timer": { "type": "string", "enum": ["stable", "ticking", "spike"] },
                "support_nodes": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "notes": { "type": "string" }
              },
              "required": ["collapse_stage", "rescued_archivists", "hazard_timer"],
              "additionalProperties": true
            }
          },
          "required": ["state"]
        }
      ]
    },
    "nextGuardiansContentSetState": {
      "allOf": [
        { "$ref": "#/definitions/contentSetState" },
        {
          "type": "object",
          "properties": {
            "state": {
              "type": "object",
              "properties": {
                "legacy_rank": { "type": "number", "minimum": 0, "maximum": 5 },
                "town_morale": { "type": "number", "minimum": 0, "maximum": 100 },
                "heir_alignment": {
                  "type": "string",
                  "enum": ["wind", "earth", "idealistic", "pragmatic", "neutral"]
                },
                "structures": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "trials_result": {
                  "type": "string",
                  "enum": ["victory", "alliance", "evacuated"]
                }
              },
              "required": ["legacy_rank", "town_morale", "heir_alignment", "structures"],
              "additionalProperties": true
            }
          },
          "required": ["state"]
        }
      ]
    },
    "balkanTrailContentSetState": {
      "allOf": [
        { "$ref": "#/definitions/contentSetState" },
        {
          "type": "object",
          "properties": {
            "state": {
              "type": "object",
              "properties": {
                "expedition_stage": { "type": "string", "enum": ["planning", "underway", "finale", "complete"] },
                "convoy_morale": { "type": "number", "minimum": 0, "maximum": 100 },
                "supply_tokens": { "type": "number", "minimum": 0, "maximum": 6 },
                "alliance_track": {
                  "type": "object",
                  "properties": {
                    "byzantine": { "type": "number", "minimum": -5, "maximum": 5 },
                    "latin": { "type": "number", "minimum": -5, "maximum": 5 },
                    "voinuk": { "type": "number", "minimum": -5, "maximum": 5 }
                  },
                  "required": ["byzantine", "latin", "voinuk"],
                  "additionalProperties": false
                },
                "artifact_clues": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "trail_notes": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "trails_resolution": {
                  "type": "string",
                  "enum": ["byzantine", "latin", "voinuk", "solo", "split", "unknown", null]
                }
              },
              "required": ["expedition_stage", "convoy_morale", "supply_tokens", "alliance_track", "artifact_clues"],
              "additionalProperties": true
            }
          },
          "required": ["state"]
        }
      ]
    },
    "lautStrongholdContentSetState": {
      "allOf": [
        { "$ref": "#/definitions/contentSetState" },
        {
          "type": "object",
          "properties": {
            "state": {
              "type": "object",
              "properties": {
                "defense_phase": { "type": "string", "enum": ["scouting", "siege", "aftermath"] },
                "stronghold_integrity": { "type": "number", "minimum": 0, "maximum": 100 },
                "ward_power": { "type": "number", "minimum": 0, "maximum": 5 },
                "woinuk_morale": { "type": "number", "minimum": 0, "maximum": 100 },
                "espionage_alert": { "type": "number", "minimum": 0, "maximum": 5 },
                "hazard_tokens": { "type": "number", "minimum": 0, "maximum": 5 },
                "safehouses": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "artifact_insight": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "oath_resolution": {
                  "type": "string",
                  "enum": ["ward", "evacuation", "betrayal", "undecided"]
                },
                "notes": { "type": "string" }
              },
              "required": [
                "defense_phase",
                "stronghold_integrity",
                "ward_power",
                "woinuk_morale",
                "espionage_alert",
                "hazard_tokens",
                "safehouses",
                "artifact_insight",
                "oath_resolution"
              ],
              "additionalProperties": true
            }
          },
          "required": ["state"]
        }
      ]
    }
  }
}
