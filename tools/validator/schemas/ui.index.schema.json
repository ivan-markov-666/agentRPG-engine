{
  "$id": "https://agent-rpg/schemas/ui.index.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Index",
  "type": "object",
  "required": ["schema_version", "files"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "files": {
      "type": "object",
      "required": ["scene", "actions", "hud", "history"],
      "additionalProperties": false,
      "properties": {
        "scene": { "type": "string", "minLength": 1 },
        "actions": { "type": "string", "minLength": 1 },
        "hud": { "type": "string", "minLength": 1 },
        "history": { "type": "string", "minLength": 1 }
      }
    },
    "schemas": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "player_data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "saves_index": { "type": "string", "minLength": 1 },
        "full_history_file": { "type": "string", "minLength": 1 }
      }
    }
  }
}
