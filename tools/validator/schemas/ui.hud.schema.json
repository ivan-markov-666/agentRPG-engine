{
  "$id": "https://agent-rpg/schemas/ui.hud.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI HUD",
  "type": "object",
  "required": ["schema_version"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "bars": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["current"],
        "properties": {
          "current": { "type": "number" },
          "max": { "type": "number" }
        }
      }
    },
    "status_effects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string" }
        }
      }
    },
    "reputation": { "type": "object", "additionalProperties": { "type": "number" } },
    "currency": { "type": "object", "additionalProperties": { "type": "number" } },
    "needs": { "type": "object", "additionalProperties": { "type": "number" } }
  }
}
