{
  "name": "agentrpg-tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "validate": "node tools/validator/index.js",
    "test": "node tools/validator/tests/validator.test.js && node tools/tests/archive-telemetry.test.js && node tools/tests/metrics-report.test.js",
    "typecheck": "tsc --noEmit",
    "build:ts": "tsc -p tsconfig.build.json",
    "lint:ts": "eslint \"src/**/*.ts\"",
    "validate:metrics": "node tools/scripts/validate-metrics.js",
    "archive:telemetry": "node tools/archive-telemetry.js",
    "archive:telemetry:ps": "powershell -ExecutionPolicy Bypass -File tools/scripts/archive-telemetry.ps1",
    "archive:telemetry:sh": "bash tools/scripts/archive-telemetry.sh",
    "publish:telemetry": "node tools/scripts/publish-telemetry.js",
    "metrics:report": "node tools/metrics/report.js",
    "exploration:add": "node tools/exploration/add-entry.js",
    "economy:report": "node tools/economy/report.js",
    "scenario:index": "node tools/scenario/update-index.js",
    "quest:add": "node tools/quests/add-quest.js",
    "area:add": "node tools/areas/add-area.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/node": "^22.8.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
